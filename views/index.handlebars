
<div class="container w-50" style="margin-top: 100px ;">
  <div class="row">
    <div class="col-10 dropdown">
      <button class="btn btn-outline-secondary dropdown-toggle col-12" type="button" data-bs-toggle="dropdown" aria-expanded="false">
        篩選類別
      </button>
      <ul class="dropdown-menu">
        {{#each categories}}
        <li><a class="dropdown-item" href="/records/filter/{{this._id}}">{{this.name}}</a></li>
        {{/each}}
      </ul>
    </div>
    <div class="col-2 text-end">
      <a class="btn btn-outline-secondary" href="/records/new" >
        新增
      </a>
    </div>
  </div>

  <div class="m-3">
    <h1><span style="font-size: 20px">總金額 : </span>{{totalAmount}}</h1>
  </div>
  <table class="table table-striped table-hover">
    <thead>
      <td>img</td>
      <td>name</td>
      <td>expense</td>
      <td></td>
      <td></td>
    </thead>
    <tbody>
      {{#each modifiedRecords}}
      <tr class="align-middle">
        <td><i>{{{this.fascode}}}</i></td>
        <td>
          <p class="name-record">{{this.name}}</p>
          <span class="date-record">{{this.date}}</span>
        </td>
        <td>{{this.amount}}</td>
        <td style="width: 10px;">
          <button class="btn">
            <a href="./records/{{this._id}}/edit">
              <i class="fa-solid fa-pen-to-square fa-lg"></i>
            </a>
          </button>
        </td>
        <td style="width: 10px;">
          <form action="./records/{{this._id}}?_method=DELETE" method="POST">  
            <button class="btn" type="submit">
                <i class="fa-solid fa-trash fa-lg"></i>
              </a>
            </button>
          </form>
        </td>
      </tr>
      {{/each}}
    </tbody>
  </table>
</div>