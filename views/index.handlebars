
<div class="container w-50" style="margin-top: 100px ;">
  <div class="row">
    <div class="col-10 dropdown">
      <button class="btn btn-major dropdown-toggle col-12" type="button" data-bs-toggle="dropdown" aria-expanded="false">
        類別
      </button>
      <ul class="dropdown-menu">
        {{#each categories}}
        <li><a class="dropdown-item" href="/">{{this.name}}</a></li>
        {{/each}}
      </ul>
    </div>
    <div class="col-2 text-end">
      <a class="btn btn-sm btn-major" href="/records/new" >
        新增支出紀錄
      </a>
    </div>
  </div>

  <div>
    <h1>總金額 : {{totalAmount}}</h1>
  </div>
  <table class="table table-striped table-hover">
    <thead>
      <td>img</td>
      <td>name</td>
      <td>expense</td>
      <td></td>
      <td></td>
    </thead>
    <tbody>
      {{#each modifiedRecords}}
      <tr>
        <td><i>{{{this.fascode}}}</i></td>
        <td>{{this.name}} {{this.date}}</td>
        
        <td>{{this.amount}}</td>
        <td>
          <button>
            <a href="">
              Edit
            </a>
          </button>
        </td>
        <td>
          <button>
            <a href="">
              Delete
            </a>
          </button>
        </td>
      </tr>
      {{/each}}
    </tbody>
  </table>
</div>